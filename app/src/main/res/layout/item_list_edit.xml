<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@drawable/bg_item_list"
        android:padding="15dp">

        <com.viseeointernational.battmon.view.custom.RoundCornerImageView
            android:id="@+id/device_header"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:scaleType="centerCrop"
            app:borderColor="@color/theme"
            app:borderWidth="2dp"
            app:cornerRadius="35dp" />

        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@mipmap/ic_edit_header" />

        <ImageView
            android:id="@+id/done"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_alignParentEnd="true"
            android:clickable="true"
            android:focusable="true"
            android:src="@drawable/ic_done" />

        <EditText
            android:id="@+id/device_name"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_toStartOf="@id/done"
            android:layout_toEndOf="@id/device_header"
            android:background="@drawable/bg_edit_name"
            android:gravity="center_vertical"
            android:imeOptions="actionDone"
            android:maxLines="1"
            android:paddingStart="10dp"
            android:paddingEnd="30dp"
            android:singleLine="true"
            android:textColor="@color/theme"
            android:textSize="20dp"
            tools:text="ssssss" />

        <ImageView
            android:id="@+id/empty"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginEnd="10dp"
            android:layout_toStartOf="@id/done"
            android:padding="8dp"
            android:src="@drawable/ic_empty" />

        <ImageView
            android:id="@+id/delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="10dp"
            android:layout_toStartOf="@id/done"
            android:clickable="true"
            android:focusable="true"
            android:src="@drawable/ic_delete" />

        <TextView
            android:id="@+id/cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="25dp"
            android:layout_toStartOf="@id/delete"
            android:clickable="true"
            android:focusable="true"
            android:text="Cancel"
            android:textColor="@color/theme"
            android:textSize="16dp" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@android:color/white" />

    <View
        android:layout_width="match_parent"
        android:layout_height="5dp" />

</LinearLayout>