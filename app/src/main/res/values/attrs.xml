<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="RoundCornerImageView">
        <attr name="borderWidth" format="dimension" />
        <attr name="borderColor" format="color" />
        <attr name="cornerRadius" format="dimension" />
    </declare-styleable>
    <declare-styleable name="RSSIView">
        <attr name="color" format="color" />
        <attr name="rssi" format="integer" />
        <attr name="lineWidth" format="dimension" />
        <attr name="circleRadius" format="dimension" />
    </declare-styleable>
    <declare-styleable name="WaveView">
        <attr name="waveColor" format="color" />
        <attr name="alpha" format="float" />
        <attr name="length" format="dimension" />
        <attr name="amplitude" format="dimension" />
        <attr name="speed" format="dimension" />
        <attr name="progress" format="float" />
    </declare-styleable>
    <declare-styleable name="FlashView">
        <attr name="flashColor" format="color" />
        <attr name="flashRadius" format="dimension" />
        <attr name="breatheSpeed" format="integer" />
        <attr name="breathe" format="boolean" />
    </declare-styleable>
    <declare-styleable name="ValueView">
        <attr name="text" format="string" />
        <attr name="defaultValue" format="float" />
        <attr name="step" format="float" />
        <attr name="max" format="float" />
        <attr name="min" format="float" />
        <attr name="decimalLength" format="integer" />
    </declare-styleable>
</resources>